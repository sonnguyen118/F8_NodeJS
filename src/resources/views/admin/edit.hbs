<div class="container">
<div class="mt-son-5">
    <h1>Cập nhật khóa học</h1>
    <form method="POST" action="/admin/{{courses._id}}?_method=PUT">
        <div class="form-group">
            <label for="name">Tên khóa học</label>
            <input type="text" class="form-control" id="name" name="name" value="{{courses.name}}">
        </div>

        <div class="form-group">
            <label for="description">Mô tả khóa học</label>
            <textarea type="text" class="form-control" id="description" name="description" >{{courses.description}}</textarea>
        </div>

        <div class="form-group">
            <label for="image">ID hình ảnh</label>
            <input type="text" class="form-control" id="image" name="image" value="{{courses.image}}" >
        </div>

        <div class="form-group">
            <label for="videoID">ID video</label>
            <input type="text" class="form-control" id="videoID" name="videoID" value="{{courses.videoID}}" >
        </div>

        <div class="form-group">
            <label for="level">Trình độ</label>
            <input type="text" class="form-control" id="level" name="level" value="{{courses.level}}">
        </div>
        

        <button type="submit" class="btn btn-primary">Lưu lại</button>
    </form>
</div>
</div>